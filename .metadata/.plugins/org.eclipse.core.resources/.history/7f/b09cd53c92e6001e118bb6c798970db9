		VALUES(?, ?, DEFAULT, DEFAULT, DEFAULT)
	</entry>
	
	<!-- 정보 수정 -->
	<entry key="updatePhone">
		UPDATE PHONE SET
		PHONE_NO = ?, NAME = ?
		WHERE ROWNUM = ?
	</entry>
	
